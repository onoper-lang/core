{
  "name": "onoper-core",
  "version": "1.0.4",
  "description": "Linguagem para transformar listas em fluxogramas",
  "main": "dist/index.js",
  "module": "src/index.ts",
  "scripts": {
    "prebuild:deps": "bun run src/preBuildDeps.ts",
    "build:js": "bun build src/index.ts --outdir dist",
    "build:types": "tsc --emitDeclarationOnly --outDir dist",
    "build": "bun run prebuild:deps && bun run build:js && bun run build:types",
    "prepublishOnly": "npm run build",
    "publish": "npm publish --access public",
    "dev": "bun src/server.ts",
    "start": "bun dist/index.js",
    "test": "bun test"
  },
  "keywords": [
    "flowchart",
    "diagram",
    "visualization",
    "compiler"
  ],
  "author": "victorhdsp",
  "license": "Apache-2.0",
  "type": "module",
  "private": false,
  "devDependencies": {
    "@types/bun": "latest",
    "@types/node": "^24.3.0"
  },
  "peerDependencies": {
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "node-html-parser": "^7.0.1",
    "uuid": "^11.1.0"
  }
}